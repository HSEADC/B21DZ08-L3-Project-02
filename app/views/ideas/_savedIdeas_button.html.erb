<% 
idea_user_ids = []
idea.users.each do |user|
  idea_user_ids << user.id
end

savedIdeas_link_image = idea_user_ids.include?(current_user.id) ? image_tag("base/saved.svg", class: "Q_ProfileSave") : image_tag("base/save.svg", class: "Q_ProfileSave")
%>

<%= turbo_frame_tag dom_id(idea) do %>
  <%= link_to savedIdeas_link_image, toggle_savedIdeas_idea_path(idea), data: { turbo_stream: true } %>
<% end %>