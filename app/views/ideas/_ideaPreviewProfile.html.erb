  <% else %>
    <div></div>
  <% end %>

  <div class="W_ProfileMyIdea">
    
    <%#= image_tag "base/save_white.svg", class: "Q_ProfileMyIdeaSave" %>

    <div class="A_ProfileMyIdea A_AverageRegularText">
        <%= idea.title %>
    </div>

    <%= render 'ideas/savedIdeas_button', idea: idea %>
  </div>
    
</div>