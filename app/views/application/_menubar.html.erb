<div class="S_BodyPadding">
  <div class="O_Menu">
    <div class="W_SectionMenuLogo">
    <%= link_to welcome_feed_url do %>
      <%= image_tag "base/logo.svg", class: "Q_Logo" %>
    <% end %>
    </div>
    <div class="W_MenuSections">
        
        
          <% if user_signed_in? %>
              <div class="A_MenuSection <%= 'active' if current_page?(welcome_exchange_path) %>">
                <%= link_to "обмен", welcome_exchange_url%>
              </div>

              <div class="A_MenuSection <%= 'active' if current_page?(welcome_myswaps_path) %>">
                <%= link_to "мои предложения", welcome_myswaps_url %>
              </div>

              <div class="A_MenuSection <%= 'active' if current_page?(welcome_wishlist_path) %>">
                <%= link_to "вишлист", welcome_wishlist_url %>
              </div>

              <div class="A_MenuSection <%= 'active' if current_page?(welcome_savedIdeas_path) %>">
                <%= link_to welcome_savedIdeas_url do %>
                  <%= image_tag "base/fav_icon.svg", class: "Q_Icon" %>
                 <% end %>
              </div>

              <div class="A_MenuSection ">
                <%= link_to profile_path(current_user.profile) do %>
                  <% if current_user.profile.profile_image.file.present? %>
                  <div class="A_HeaderAvatar">
                  <%= image_tag current_user.profile.profile_image.url, class: "Q_HeaderAvatar" %>
                  </div>
                  <% else %>
              <%= image_tag "base/profile_image.png", class: "A_ProfileAvatarImg", alt: "Default Avatar" %>
            <% end %>
            <% end %>
              </div>

            
          <% else %>
            <div class="A_MenuSectionFour"><%= link_to "войти", new_user_session_path %></div>
          <% end %>
        

    </div>

  </div>
</div>

