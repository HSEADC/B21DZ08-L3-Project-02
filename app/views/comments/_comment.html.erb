<div id="<%= dom_id comment %>">
  <p>
    <strong>Body:</strong>
    <%= comment.body %>
  </p>

  <p>
    <strong>Plant:</strong>
    <%= comment.plant_id %>
  </p>

</div>


<div>
  <%= link_to "Edit this comment", edit_plant_comment_path(@plant, comment) %>
  <%= button_to "Destroy this comment", comment, method: :delete %>
</div>

