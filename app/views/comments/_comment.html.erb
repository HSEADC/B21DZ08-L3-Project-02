<div id="<%= dom_id comment %>">
  <p>
    <strong>
    <%= comment.user.email %>
    </strong>
  </p>
  
  <p>
    <%= comment.body %>
  </p>
</div>

<% if can? :manage, comment %>
  <div>
    <%= link_to "Edit this comment", edit_plant_comment_path(@plant, comment) %>
    <%= button_to "Destroy this comment", [@plant, comment], method: :delete %>
  </div>
<% end %>

