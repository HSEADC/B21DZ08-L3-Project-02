<%= form_with(model:[:admin, plant]) do |form| %>
  <% if plant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :plant_image, style: "display: block" %>
    <%= form.file_field :plant_image %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <% if false %>
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id %>
  </div>
  <% end %>

  <div>
  <%= form.label :tag_list, style: "display: block" %>
  <%= form.text_field :tag_list, value: plant.tag_list .join(', ') %>
</div>

<div>
  <%= form.label :category_list, style: "display: block" %>
  <%= form.text_field :category_list, value: plant.category_list .join(', ') %>
</div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
