<div class="S_BodyPadding">
  <div class="M_TitleWrapper">
  <div class="W_SwapProfileTitle">
    <div class="M_SwapProfileTitle">
      <div class="A_Title">
        <%= swap.title %>
      </div>
      <%= link_to edit_admin_swap_path(@swap) do %>
        <%= image_tag "base/plant_edit.svg", class: "Q_Icon" %>
      <% end %>
  
      <%= button_to [:admin, @swap], method: :delete, class: "custom-button" do %>
        <%= image_tag "base/plant_bin.svg", class: "Q_Icon" %>
        
      <% end %>
      <div class="M_SwapFirstBlock">
      

      </div>
    </div>

    <div>
      <div class="M_SwapContact">
        <%= image_tag "base/info.svg", class: "Q_Icon" %>
        <div class="A_SwapContact A_MediumText">
          Контакт <%= @user.profile.username %>
        </div>
      </div>
    </div>

    </div>
  </div>

  <div class="W_PlantProfileContent">
      <div class="W_PlantProfileInfo">
        <div class="A_AverageRegularText">Владелец: <%= @user.profile.username %></div>
        <div class="A_RegularText"><%= swap.description %></div>
      </div>
      
        <div class="W_PlantProfilePic">
          <%= image_tag swap.swap_image.url, class: "A_PlantProfilePic" if swap.swap_image.url %>
        </div>

        <div class="W_PlantProfileInteraction">
          <div class="A_PlantDate A_AverageRegularText">
            Добавлено:
            <%= swap.created_at.strftime("%Y.%m.%d") %>
          </div>
        </div>


      </div>
  </div>
</div>